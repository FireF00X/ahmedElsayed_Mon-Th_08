
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>403 Forbidden</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .bg {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            color: #343a40;
        }

        .error-container {
            max-width: 500px;
            margin: auto;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .error-code {
            font-size: 100px;
            font-weight: bold;
        }

        .error-message {
            font-size: 24px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>AhmedHamada</h1>
    <div class="bg">
        <div class="error-container">
            <div class="error-code">403</div>
            <div class="error-message">Access Denied / Forbidden</div>
            <p>Sorry, you don't have permission to access this page.</p>
            <a href="/" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>
</body>
</html>

