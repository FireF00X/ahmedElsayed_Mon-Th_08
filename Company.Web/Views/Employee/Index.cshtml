@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Index";
}

<div class="btn btn-primary">
    <a class="text-light text-decoration-none" asp-controller="Employee" asp-action="Create">Add Employee</a>
</div>
<div class="row justify-content-center align-items-center my-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Salary)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.Address)</th>
                <th>@Html.DisplayNameFor(d => d.HiringDate)</th>
                <th>@Html.DisplayNameFor(d => d.ImageUrl)</th>
                <th>@Html.DisplayNameFor(d => d.DepartmentId)</th>
                <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th>@employee.Id</th>
                    <th>@employee.Name</th>
                    <th>@employee.Age</th>
                    <th>@employee.Salary</th>
                    <th>@employee.PhoneNumber</th>
                    <th>@employee.Email</th>
                    <th>@employee.Address</th>
                    <th>@employee.HiringDate</th>
                    <th>
                        <img src="~/Files/Images/@employee.Image" height="40" width="40" />
                    </th>
                    <th>@employee.DepartmentId</th>
                    <th>@employee.CreatedAt</th>
                    <partial name="_ActionButtonsPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning fw-bold" role="alert">
        No Data To Retrive Yet
    </div>
}