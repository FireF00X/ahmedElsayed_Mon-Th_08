@model IEnumerable<IdentityRole>

<h1>All Roles</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <th>@role.Id</th>
                    <th>@role.Name</th>
                    <partial name="_ActionButtonsPartialView" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning fw-bold" role="alert">
        No Data To Retrive Yet
    </div>
}